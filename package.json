{
  "name": "mobx-react-typescript-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for MobX + React project with Typescript, ES6 compilation and hot code reloading",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:client": "cd client && webpack-dev-server --config webpack.dev.js -d --history-api-fallback --hot --inline --progress --colors --port 3000",
    "start:server": "ts-node ./server/app.ts",
    "build:client": "cd client && webpack --progress --colors --config webpack.dev.js",
    "build:client:prod": "cd client && webpack --progress --colors --config webpack.prod.js",
    "watch:client": "nodemon -e js,ts,tsx --watch client --exec npm run build:client",
    "watch:server": "nodemon -e ts --watch server --exec npm run start:server",
    "watch:all": "npm run build:client && concurrently --kill-others \"npm run watch:client\" \"npm run watch:server\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mobxjs/mobx-react-typescript-boilerplate.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "boilerplate",
    "mobx",
    "starter-kit"
  ],
  "author": "Michel Weststrate <mweststrate@gmail.com> (http://github.com/mweststrate)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mobxjs/mobx/issues"
  },
  "homepage": "http://mobxjs.github.com/mobx",
  "devDependencies": {
    "@types/body-parser": "^1.16.7",
    "@types/express": "^4.0.39",
    "@types/react": "^16.0.13",
    "@types/react-dom": "^16.0.1",
    "@types/webpack": "^3.0.13",
    "awesome-typescript-loader": "^3.2.3",
    "concurrently": "^3.5.0",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^1.1.5",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "material-ui": "^1.0.0-beta.17",
    "material-ui-icons": "^1.0.0-beta.17",
    "mobx": "^3.3.1",
    "mobx-react": "^4.3.3",
    "mobx-react-devtools": "^4.2.15",
    "nodemon": "^1.12.1",
    "postcss": "^6.0.13",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.8",
    "postcss-reporter": "^5.0.0",
    "postcss-url": "^7.1.2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-hot-loader": "^3.1.1",
    "serializer.ts": "0.0.12",
    "style-loader": "^0.19.0",
    "ts-node": "^3.3.0",
    "typescript": "^2.5.3",
    "uglifyjs-webpack-plugin": "^1.0.1",
    "url-loader": "^0.6.2",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.6.1",
    "webpack-hot-middleware": "^2.20.0"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2"
  }
}
